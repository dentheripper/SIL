<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/alert_d_bg">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#2DE2E6"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/app_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove_from_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constraintLayout4h"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/remove_from_folder"
        android:textColor="#C06F" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/remove_from_folder"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constraintLayout5h"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/uninstall"
        android:textColor="#CF33" />

</RelativeLayout>